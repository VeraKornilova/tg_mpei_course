class Solution {
public:
    bool isPowerOfThree(int n) {
        bool fl=true;
        if(n==0) fl=false;
        if (n>0)
        {
           while (n>1)
           {
           if((n % 3 == 1) || (n % 3 == 2)) fl=false;
           n=n/3; 
           }
        }
        else fl=false;
       return(fl);
    }
};
